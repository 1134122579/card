/* pages/visitingCard/visitingCard.wxss */
page {
  overflow: hidden;
}

.cardpage {
  height: 100%;
  background: #F1F4F9;
  box-sizing: border-box;
  overflow-y: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}

.card {
  width: 78%;
  background: #fff;
  margin: 0rpx auto;
  box-shadow: 0 0 24rpx #D6DADC;
  border-radius: 14rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  padding: 54rpx 20rpx 36rpx;
  margin-bottom: 50rpx;
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.card-item {
  display: flex;
  width: 100%;
  justify-content: space-around;
}

.card-left {
  width: 57%;
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.card-right {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0rpx 0 20rpx 20rpx;
  box-sizing: border-box;
}

.name {
  font-size: 44rpx;
  margin-top: -40rpx;
  font-weight: 700;
}

.dep {
  color: #414040;
  padding: 160rpx 0 110rpx;
  /* padding-left: 16rpx; */
  font-size: 30rpx;
  text-align: center;
  align-items: flex-start;
}

.dep .card-left {
  padding-left: 20rpx;
}

.header-image {
  width: 290rpx;
  display: block;
}

.desc {
  align-items: flex-start;
}


/* 用户信息 */
.userinfo {
  color: #666666;
  font-size: 24rpx;
  margin: 0 auto;
  width: 100%;
  box-sizing: border-box;
  padding-left: 20rpx;
}

.info-li {
  margin-top: 14rpx;
  white-space: nowrap;
}

.block-button {
  width: 640rpx;
  width: 80%;
  margin: 0 auto;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
}

.button-li {
  text-align: center;
  font-size: 26rpx;
  text-align: center;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.wxlogo {
  width: 70rpx;
  height: 70rpx;
  display: block;
  margin-bottom: 16rpx;
  flex-shrink: 0;
}

.tag {
  text-align: center;
  padding: 16rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #666666;
}

.header-image-logo {
  width: 210rpx;
}

.codeimage {
  width: 90rpx;
  height: 90rpx;


}

